<!-- tag::jwt[] -->
<server description="Sample Liberty server">

    <featureManager>
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>jsf-2.3</feature>
        <feature>cdi-2.0</feature>
        <!-- FOR SECURITY -->
        <feature>appSecurity-3.0</feature>
        <feature>servlet-4.0</feature>
        <feature>mpJwt-1.1</feature>
        <feature>mpConfig-1.4</feature>
        <feature>mpRestClient-1.4</feature>

    </featureManager>


    <variable name="default.http.port" defaultValue="9090"/>
    <variable name="default.https.port" defaultValue="9091"/>

    <keyStore id="defaultKeyStore" password="secret" />

    <cors domain="/"
          allowedOrigins="*"
          allowedMethods="GET, DELETE, POST, PUT" />


    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
                  id="defaultHttpEndpoint" />

    <basicRegistry id="basic" realm="WebRealm">
        <!--user name="bob" password="{xor}PTA9Lyg7" />  <!- bobpwd -->
        <!--user name="alice" password="{xor}PjM2PDovKDs=" />  <!- alicepwd -->
        <!-- user name="carl" password="{xor}PD4tMy8oOw==" />  <!- carlpwd -->
        <!-- same passwords, different enoding -->
        <user name="carl" password="{hash}ATAAAAAIr5RHu1qlHgtAAAAAIKOrCqAQQ+UZaHoc01T6or/olQEx9jW1TWgTukxw9wyS"/>
        <user name="bob" password="{hash}ATAAAAAIszBvslkzLjZAAAAAICRn0BfpNPG0RR2SGli/G/xJMC9uUEt8evFJXsYnUt3g"/>
        <user name="alice" password="{hash}ATAAAAAInvQkrLdx//dAAAAAIMXWFtbIiNxahOUkSl80c6rworoIzK7b3eLL93XOSlVr"/>

        <group name="myAdmins">
            <member name="bob" />
        </group>

        <group name="myUsers">
            <member name="bob" />
            <member name="alice" />
            <member name="carl" />
        </group>
    </basicRegistry>

    <application location="frontend.war" context-root="/">
        <application-bnd>
            <security-role name="admin">
                <group name="myAdmins" />
            </security-role>
            <security-role name="user">
                <group name="myUsers" />
            </security-role>
        </application-bnd>
    </application>

    <!-- This JWT builder is used to build a JWT for an authenticated user.
             JWTs generated by this builder contain
             the user name and roles of the authenticated user. -->
    <jwtBuilder id="jwtFrontEndBuilder" issuer="http://openliberty.io" expiry="24h"/>
    
    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />

</server>
<!-- end::jwt[] -->
